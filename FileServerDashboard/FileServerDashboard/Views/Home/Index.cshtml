@model FileServerDashboard.Models.ViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Dashboard</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>CPU Usage</h2>
        <p>@Model.CpuUsage.ToString("#.##")<text>%</text></p>
    </div>
    <div class="col-md-4">
        <h2>RAM Usage</h2>
        <p>@Model.MemoryUsage.ToString("#.##")<text>MB</text></p>
    </div>
    <div class="col-md-4">
        <h2>Disk Usage</h2>
        <p>@Model.UsedArray.ToString("#.##")<text>TB</text> / @Model.TotalArray.ToString("#.##")<text>TB</text></p>
    </div>
</div>